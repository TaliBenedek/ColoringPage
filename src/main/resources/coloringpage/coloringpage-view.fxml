<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="436.0" prefWidth="634.0" gridLinesVisible="false" hgap="20" vgap="20"
          xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="coloringpage.ColoringPageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
        <Label fx:id="fileLabel" text="File path:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="fileNameTextField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Button fx:id="browseButton" onAction="#onBrowseButtonClick" text="Browse" GridPane.rowIndex="0"
                GridPane.columnIndex="2"/>
        <Button fx:id="saveButton" onAction="#onSaveButtonClick" text="Save" GridPane.rowIndex="0"
                GridPane.columnIndex="3"/>
        <ImageView fx:id="originalImageView" fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true"
                   GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
        <ImageView fx:id="modifiedImageView" fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true"
                   GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>


    </children>
</GridPane>